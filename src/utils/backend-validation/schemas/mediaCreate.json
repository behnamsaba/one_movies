{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "minLength": 1,
      "maxLength": 30
    },
    "apiId": {
      "minLength": 1,
      "maxLength": 30
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 7
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40
    },
    "posterPath": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40
    },
    "rating": {
      "minLength": 1,
      "maxLength": 5
    },
    "releaseDate": {
      "type": "string",
      "minLength": 4,
      "maxLength": 10
    }
  },
  "additionalProperties": false,
  "required": [
    "apiId",
    "title",
    "posterPath",
    "releaseDate"
  ]
}
